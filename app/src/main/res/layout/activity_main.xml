    <Button
        android:id="@+id/btnRestar"
        android:layout_width="75dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="4dp"
